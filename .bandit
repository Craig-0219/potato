# Bandit 安全掃描配置 - 重構後版本
[bandit]
# 排除測試檔案和特定目錄
exclude_dirs = tests,htmlcov,.pytest_cache,__pycache__,.git

# 掃描的檔案類型
include = *.py

# 跳過的測試規則 (根據專案需求調整)
skips = 
    # B101: assert_used - 在測試中使用 assert 是正常的
    B101,
    # B601: paramiko_calls - 如果使用 paramiko 
    B601

# 設定信心等級 (HIGH, MEDIUM, LOW)
confidence = HIGH

# 設定嚴重程度過濾 (HIGH, MEDIUM, LOW)  
severity = MEDIUM

# 輸出格式
format = json
output = bandit-report.json