[flake8]
max-line-length = 100
extend-ignore = E203,W503,E501,F401,E402,D100,D101,D102,D103,D104,D105,D107,F841,E722,C901,F541,F811,F821,F822,W605

exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    archive,
    backups,
    transcripts,
    migrations/*.sql,
    *.log,
    *.md

# 允許某些複雜度
max-complexity = 15

# 按文件類型允許不同錯誤
per-file-ignores =
    __init__.py:F401,E402
    */migrations/*.py:E501,F401
    */tests/*.py:D100,D101,D102,D103
    bot/main.py:E402,F401,F811
    bot/cogs/*.py:D100,D101,D102,D103,D107
    shared/*.py:E402,F401