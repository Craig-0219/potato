# Potato Bot 生產環境配置文件
# 複製此文件為 .env 並填入您的實際值

# ======================
# 🤖 DISCORD 配置 (必填)
# ======================
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_GUILD_ID=your_discord_server_id

# Discord 角色管理
DISCORD_ADMIN_ROLE_IDS=role_id_1,role_id_2
DISCORD_STAFF_ROLE_IDS=role_id_3,role_id_4

# ======================
# 🗄️ 資料庫 (必填)
# ======================
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_username
DB_PASSWORD=your_secure_database_password
DB_NAME=potato_bot

# ======================
# 🌍 環境設定
# ======================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SYNC_COMMANDS=false

# ======================
# 🗃️ 快取與存儲
# ======================
REDIS_URL=redis://localhost:6379/0
CLOUD_STORAGE_BUCKET=your_cloud_storage_bucket_name

# ======================
# 🎵 媒體與內容
# ======================
YOUTUBE_API_KEY=your_youtube_api_key
MUSIC_DAILY_FREE_QUOTA=20
MUSIC_MAX_QUEUE_SIZE=50

# 圖片處理
IMAGE_DAILY_FREE_QUOTA=5
IMAGE_MAX_SIZE_MB=10
IMAGE_SUPPORTED_FORMATS=jpg,jpeg,png,gif,webp
IMAGE_STORAGE_PATH=/tmp/bot_images

# ======================
# 🎫 TICKET SYSTEM
# ======================
TICKET_AUTO_ASSIGNMENT=true
TICKET_SLA_MONITORING=true
TICKET_AUTO_REPLIES=true
TICKET_RATING_SYSTEM=true
TICKET_ADVANCED_STATS=true
TICKET_DEFAULT_SLA_MINUTES=60
TICKET_DEFAULT_AUTO_CLOSE_HOURS=24
TICKET_MAX_PER_USER=3

# ======================
# 💰 ECONOMY SYSTEM
# ======================
ECONOMY_ENABLED=true
ECONOMY_STARTING_COINS=1000
ECONOMY_DAILY_BONUS=100
ECONOMY_SERVICE_COSTS=true

# ======================
# 🔄 AUTO-UPDATE SYSTEM
# ======================
AUTO_UPDATE_ENABLED=false
GITHUB_REPO_OWNER=Craig-0219
GITHUB_REPO_NAME=potato
UPDATE_CHANNEL_ID=1234567890123456789
MAINTENANCE_WINDOW_START=2
MAINTENANCE_WINDOW_END=6
AUTO_UPDATE_BACKUP_ENABLED=true
