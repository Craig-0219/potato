# .env.example
# Potato Bot 環境變數範例文件
# 複製此文件為 .env 並填入實際值

# ======================
# 基本配置
# ======================

# Discord Bot Token (必填)
DISCORD_TOKEN=your_discord_bot_token_here

# 資料庫配置 (必填)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_username
DB_PASSWORD=your_secure_database_password
DB_NAME=potato_bot

# 環境設定
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ======================
# Discord OAuth 配置
# ======================

# Discord OAuth 設定 (Web UI 需要)
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback
DISCORD_GUILD_ID=your_discord_server_id

# Discord 角色 ID (用逗號分隔)
DISCORD_ADMIN_ROLE_IDS=role_id_1,role_id_2
DISCORD_STAFF_ROLE_IDS=role_id_3,role_id_4

# ======================
# 安全設定
# ======================

# JWT 密鑰 (用於 API 認證)
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long

# API 伺服器設定
ENABLE_API_SERVER=true
API_HOST=0.0.0.0
API_PORT=8000

# API 安全設定
API_RATE_LIMIT_PER_MINUTE=60
API_MAX_REQUEST_SIZE=10485760

# ======================
# 可選服務
# ======================

# Redis (快取)
REDIS_URL=redis://localhost:6379/0

# AI 服務 API 金鑰
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GEMINI_API_KEY=your_gemini_api_key

# AI 使用限制
AI_MAX_TOKENS=4000
AI_RATE_LIMIT_USER=10
AI_RATE_LIMIT_GUILD=100
AI_DAILY_FREE_QUOTA=10

# YouTube API (音樂功能)
YOUTUBE_API_KEY=your_youtube_api_key
MUSIC_DAILY_FREE_QUOTA=20
MUSIC_MAX_QUEUE_SIZE=50

# ======================
# 功能開關
# ======================

# 票券系統
TICKET_AUTO_ASSIGNMENT=true
TICKET_SLA_MONITORING=true
TICKET_AUTO_REPLIES=true
TICKET_RATING_SYSTEM=true
TICKET_ADVANCED_STATS=true
TICKET_DEFAULT_SLA_MINUTES=60
TICKET_DEFAULT_AUTO_CLOSE_HOURS=24
TICKET_MAX_PER_USER=3

# 經濟系統
ECONOMY_ENABLED=true
ECONOMY_STARTING_COINS=1000
ECONOMY_DAILY_BONUS=100
ECONOMY_SERVICE_COSTS=true

# 內容分析
CONTENT_ANALYSIS_ENABLED=true
CONTENT_DAILY_FREE_QUOTA=15
SENTIMENT_ANALYSIS_THRESHOLD=0.5

# 圖片處理
IMAGE_DAILY_FREE_QUOTA=5
IMAGE_MAX_SIZE_MB=10
IMAGE_SUPPORTED_FORMATS=jpg,jpeg,png,gif,webp
IMAGE_MAX_SIZE=50
IMAGE_STORAGE_PATH=/tmp/bot_images

# ======================
# Minecraft 整合 (可選)
# ======================

MINECRAFT_SERVER_HOST=your_minecraft_server_ip
MINECRAFT_SERVER_PORT=25565
MINECRAFT_SERVER_API_URL=http://your_minecraft_server:8080/api
MINECRAFT_SERVER_API_KEY=your_minecraft_api_key
CROSS_PLATFORM_SYNC_INTERVAL=300

# ======================
# 雲端存儲 (可選)
# ======================

CLOUD_STORAGE_BUCKET=your_cloud_storage_bucket_name

# ======================
# 開發和測試 
# ======================

# 測試環境設定
TESTING=false
DEBUG_VERBOSE=false

# 開發工具
SYNC_COMMANDS=false